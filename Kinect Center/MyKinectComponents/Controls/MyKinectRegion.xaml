<base:ContentForm x:Class="MyKinectComponents.Controls.KinectCommandsBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:k="http://schemas.microsoft.com/kinect/2013"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:base="clr-namespace:MyComponents.Controls;assembly=MyComponents"
             xmlns:animation="clr-namespace:MyComponents.VisibilityAnimation;assembly=MyComponents"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="150">
    <Grid Grid.Column="1" Grid.RowSpan="3"  x:Name="commandBar"  animation:VisibilityAnimation.AnimationType="Fade" Visibility="Visible" Background="#41B1E1">
            <StackPanel x:Name="pnlCommands">

                <k:KinectCircleButton Foreground="White" Height="250" x:Name="btnBack" VerticalAlignment="Top" Width="200" Margin="0,-15,0,0" Label="Back">
                    <Image Source="/MyKinectComponents;component/Resources/back.png" Height="50" VerticalAlignment="Center"/>
                </k:KinectCircleButton>


            </StackPanel>
    </Grid>

</base:ContentForm>
